<div class="container py-5 ps-5">
  <div class="row">
    <div class="col-md-4 py-3">
      <img
        src="<%= @flat.poster_url %>"
        class="img-responsive rounded"
        alt="Photo of <%= @flat.name %>"
      />
    </div>
    <div class="col-md-6 py-3">
      <h2 class="fw-bold"><%= @flat.name %></h2>
      <p class="text-muted"><%= @flat.address %></p>
      <h3 class="mt-4">€ <%= @flat.price %></h3>
      <p class="mb-4">/ night </p>
      <p class="mb-4">
        <%= @flat.description %>
      </p>
    </div>
    <div class="col-md-2 mb-4 py-2">
      <a class="btn btn-success btn-sm my-2 text-white" type="button" href="#book_module">
        📅 Choose a date
      </a>
      <button class="btn btn-secondary btn-sm my-2" type="button">
        🤍 Add to wishlist
      </button>
    </div>
    <div class="col-md-4 mb-4 py-5 form-card">
      <h4  id="book_module">Select a date and book</h4>
      <%= simple_form_for [@flat, @booking] do |f| %>
        <%= f.input :start_date, as: :date %>
        <%= f.input :end_date, as: :date %>
        <%= f.submit "Book now", class: "btn btn-success text-light" %>
      <% end %>
    </div>
  </div>
  <div class="my-5"></div>
</div>
