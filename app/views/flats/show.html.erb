<div>
<h1><%= @flat.name %></h1>
<img source="<%= @flat.poster_url %>" alt="Photo of <%= @flat.name %>">

</div>
<div class="container py-5">
  <div class="row">
    <div class="col-lg-6">
      <img
        src="<%= @flat.poster_url %>"
        class="img-fluid"
        alt="Photo of <%= @flat.name %>"
      />
    </div>
    <div class="col-lg-6">
      <h2 class="fw-bold"><%= @flat.name %></h2>
      <p class="text-muted"><%= @flat.address %></p>
      <h3 class="my-4">â‚¬ <%= @flat.price %></h3>
      <p class="mb-4">
        <%= @flat.description %>
      </p>

      <div class="d-flex gap-3 mb-4">
        <%= simple_form_for @user do |f| %>
          <%= f.input :date_of_booking, as: :date, start_month: Date.today.month,
            end_month: Date.today.month + 1, discard_day: true,
            order: [:month, :year] %>
          <%= f.input :accepts, as: :boolean, checked_value: 'positive', unchecked_value: 'negative' %>
          <%= f.button :submit %>
        <% end %>
      </div>
      <div>
        <button class="btn btn-outline-secondary btn-sm" type="button">
          Add to Wishlist
        </button>
      </div>
    </div>
  </div>
</div>
